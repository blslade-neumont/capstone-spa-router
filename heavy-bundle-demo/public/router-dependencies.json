{
    "$schema": "../node_modules/@aboveyou00/capstone-router/schema/router-dependencies.json",
    "routes": [
        {"path": "", "template": { "dep": "layout-tpl" }, "children": [
            {"path": "/", "title": "Home", "template": { "dep": "home-tpl" }},
            {"path": "pi", "title": "&pi;", "template": { "dep": "pi-tpl" }},
            {"path": "html5-spec", "title": "HTML5 Specification", "template": { "dep": "html5-spec-tpl" }},
            {"path": "**", "title": "Not Found: ROUTE-PARAM:**", "template": { "dep": "not-found-tpl" }}
        ]}
    ],
    "content": [{
        "name": "routes",
        "type": "text",
        "src": "/router-dependencies.json"
    }, {
        "name": "layout-tpl",
        "type": "text",
        "src": "/templates/layout.tpl.html"
    }, {
        "name": "home-tpl",
        "type": "text",
        "src": "/templates/home.tpl.html"
    }, {
        "name": "pi-tpl",
        "type": "text",
        "src": "/templates/pi.tpl.html"
    }, {
        "name": "html5-spec-tpl",
        "type": "text",
        "src": "https://www.w3.org/TR/html5/single-page.html"
    }, {
        "name": "not-found-tpl",
        "type": "text",
        "src": "/templates/not-found.tpl.html"
    }]
}
