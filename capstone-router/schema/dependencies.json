{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Router",
    "type": "object",
    "properties": {
        "content": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref": "#/definitions/content" },
                    { "$ref": "#/definitions/dynamic-content" }
                ]
            }
        }
    },
    "required": ["router"],
    "definitions": {
        "content": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "enum": ["text"]
                },
                "src": {
                    "type": "string"
                }
            },
            "required": ["name", "type", "src"]
        },
        "dynamic-content": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "enum": ["script"]
                },
                "src": {
                    "type": "string"
                },
                "methodName": {
                    "type": "string"
                },
                "deps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["name", "type", "src", "methodName"]
        }
    }
}
